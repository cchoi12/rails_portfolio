<div class="container">
  <div class="row">
    <div class="col-md-7">
      <%= @portfolio_item.main_image.nil? ? (image_tag 'http://via.placeholder.com/350x200?text=Placeholder') : (image_tag @portfolio_item.main_image) %>
    </div>

    <div class="col-md-5">
      <h1><%= @portfolio_item.title %></h1>

      <em><%= @portfolio_item.subtitle %></em>

      <p><%= @portfolio_item.body %></p>

      <hr />

      <h3>Technologies Used:</h3>
      <% @portfolio_item.technologies.each do |technology| %>
      <p><%= technology.name %></p>
      <% end %>
      <span><%= link_to 'Edit', portfolio_edit_path(@portfolio_item) if logged_in?(:site_admin)%></span>
    </div>
  </div>
</div>
