<div class="card" data-id="<%= portfolio_item.id %>">
  <%= portfolio_item.thumb_image.nil? ? (image_tag 'http://via.placeholder.com/350x200?text=Placeholder') : (image_tag portfolio_item.thumb_image) %>
  <p class="card-text">
    <span><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></span> <%= portfolio_item.subtitle %>
  </p>
</div>
