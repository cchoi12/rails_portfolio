<div class="col-sm-3 offset-sm-1 blog-sidebar">
  <div class="sidebar-module">
    <%= source_helper("alert alert-info") %>
  </div>

  <div class="sidebar-module">
    <h4>Topics</h4>
    <% @side_bar_topics.each do |topic| %>
      <p><%= link_to topic.title, topic %></p>
    <% end %>
  </div>

  <div class="sidebar-module">
    <h4>Links galore</h4>
    <ol class="list-unstyled social-links">
      <li><a href="https://github.com/cchoi12" target="_blank"><%= fa_icon "github" %></a></li>
      <li><a href="https://twitter.com/TheCalmChris"><%= fa_icon "twitter-square" %></a></li>
    </ol>
  </div>
</div>
